brew install python@3.12
brew install pyenv
pyenv install 3.12.8
pyenv local 3.12.8
python --version
curl -sSL https://install.python-poetry.org | python
# Dans ~/.zshrc, export PATH="$HOME/.local/bin:$PATH"
# source ~/.zshrc
python -m poetry init

poetry run black .
poetry run isort .
poetry run pylint .


[tool.poetry.dependencies]
python = "^3.12"

[tool.black]
line-length = 120

[tool.pylint.FORMAT]
max-line-length = 120

[tool.isort]
profile = "black"

poetry add $(cat requirements.txt)
poetry add --dev $(cat requirements-dev.txt)
poetry install
poetry install --no-root
poetry self add poetry-plugin-shell
poetry self add poetry-plugin-export

poetry export --without-hashes --without dev -o somfyProtect2Mqtt/requirements/common.txt
poetry export --without-hashes --only dev -o somfyProtect2Mqtt/requirements/dev.txt

poetry shell
python run.py
